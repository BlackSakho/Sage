---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="DÃ©couvrez les grands sages de l'histoire" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Les Grands Sages</title>
	</head>
	<body>
		<nav>
			<div class="nav-content">
				<a href="/" class="logo">Les Grands Sages</a>
				<div class="nav-links">
					<a href="/">Accueil</a>
					<a href="/">Galerie</a>
					<a href="/">Discours</a>
				</div>
			</div>
		</nav>
		<slot />
		<footer>
			<p>&copy; {new Date().getFullYear()} Les Grands Sages. BlackSakho.</p>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
	}
	body {
		margin: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	nav {
		background: #23262d;
		padding: 1rem 0;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	}
	.nav-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.logo {
		color: rgb(var(--accent-light));
		font-size: 1.5rem;
		font-weight: bold;
		text-decoration: none;
	}
	.nav-links a {
		color: white;
		text-decoration: none;
		margin-left: 1rem;
	}
	.nav-links a:hover {
		color: rgb(var(--accent-light));
	}
	footer {
		background: #23262d;
		color: white;
		text-align: center;
		padding: 1rem;
		margin-top: auto;
	}
</style>