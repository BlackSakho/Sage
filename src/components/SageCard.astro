---
interface Props {
	name: string;
	image: string;
	brief: string;
	period: string;
	href: string;
}

const { href, name, image, brief, period } = Astro.props;
---

<div class="sage-card">
	<a href={href}>
		<img src={image} alt={name} />
		<div class="content">
			<h2>{name}</h2>
			<p class="period">{period}</p>
			<p class="brief">{brief}</p>
		</div>
	</a>
</div>

<style>
	.sage-card {
		background-color: #23262d;
		border-radius: 8px;
		transition: transform 0.2s ease-in-out;
		overflow: hidden;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	}
	.sage-card:hover {
		transform: translateY(-5px);
	}
	.sage-card a {
		text-decoration: none;
		color: white;
	}
	.sage-card img {
		width: 100%;
		height: 250px;
		object-fit: cover;
	}
	.content {
		padding: 1.5rem;
	}
	h2 {
		margin: 0;
		font-size: 1.5rem;
		color: rgb(var(--accent-light));
	}
	.period {
		color: #888;
		font-size: 0.9rem;
		margin: 0.5rem 0;
	}
	.brief {
		margin: 0;
		line-height: 1.4;
	}
</style>